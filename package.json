{
	"name": "node-app",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"prettier-check": "prettier --loglevel=log --ignore-path .gitignore --check .",
		"eslint-check": "eslint --ignore-path .gitignore .",
		"tsc-check": "tsc --pretty --noEmit --project tsconfig.json --incremental false",
		"jest-check": "jest --verbose --runInBand --detectOpenHandles --config jest.config.ts",
		"dev": "webpack --watch --config ./webpack.config.ts --mode development",
		"build": "webpack --config ./webpack.config.ts --mode production",
		"start": "node ./dist/app.js",
		"everything": "npm run prettier-check && npm run eslint-check && npm run tsc-check && npm run jest-check && npm run build && npm run start"
	},
	"dependencies": {
		"@swc/helpers": "^0.5.1",
		"chalk": "^4.1.2",
		"source-map-support": "^0.5.21",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@jest/globals": "^29.5.0",
		"@swc/core": "^1.3.59",
		"@swc/jest": "^0.2.26",
		"@total-typescript/ts-reset": "^0.4.2",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/case-sensitive-paths-webpack-plugin": "^2.1.6",
		"@types/eslint": "^8.37.0",
		"@types/node": "^18.16.13",
		"@types/prettier": "^2.7.2",
		"@types/webpack-node-externals": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"@typescript-eslint/parser": "^5.59.6",
		"case-sensitive-paths-webpack-plugin": "^2.4.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-jsdoc": "^44.2.4",
		"eslint-plugin-n": "^16.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-unicorn": "^47.0.0",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"nodemon": "^2.0.22",
		"nodemon-webpack-plugin": "^4.8.1",
		"prettier": "^2.8.8",
		"swc-loader": "^0.2.3",
		"terser-webpack-plugin": "^5.3.9",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"tsconfig-paths-webpack-plugin": "^4.0.1",
		"typescript": "^5.0.4",
		"webpack": "^5.86.0",
		"webpack-cli": "^5.1.1",
		"webpack-node-externals": "^3.0.0"
	}
}
